{% extends "base.html.twig" %}

{% block head %}
    <title>Cap</title>
{% endblock %}

{% block main %}

    <h1>Cap</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cap.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cap.description }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cap.name }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ cap.color }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ cap.size }}</td>
            </tr>
            <tr>
                <th>Condition</th>
                <td>{{ cap.condition }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ cap.brand }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ cap.year }}</td>
            </tr>
            <tr>
                <th>Inventory</th>
                <td>{{ cap.inventory }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(cap, 'imageFile') }}"/></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cap_index') }}">back to list</a>

    <a href="{{ path('app_member_show', {'id': cap.inventory.member.id}) }}">Show member profile</a>

    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_cap_edit', {'id': cap.id}) }}">edit</a>
        {{ include('cap/_delete_form.html.twig') }}
    {% endif %}  

{% endblock %}
