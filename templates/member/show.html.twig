{% extends "base.html.twig" %}

{% block head %}
    <title>Member</title>
{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ member.name }}</td>
            </tr>
            <th>Inventories</th>
            <td>
                <ul>
                    {% for inventory in member.inventory %}
                        <a href="{{ path('app_inventory_show', {'id' : inventory.id}) }}">{{ inventory.name }}</a>
                    {% else %}
                        <em>No inventories</em>
                    {% endfor %}
                </ul>
                     
            </td>    
        </tbody>
    </table>

    <a href="{{ path('app_member_index') }}">back to list</a>

    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_member_edit', {'id': member.id}) }}">edit</a>
        {{ include('member/_delete_form.html.twig') }}
    {% endif %}    
{% endblock %}
