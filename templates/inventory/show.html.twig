{% extends "base.html.twig" %}

{% block head %}
    <title>Inventory</title>
{% endblock %}

{% block body %}
    <h1>Inventory</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ inventory.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ inventory.description }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ inventory.name }}</td>
            </tr>
            <th>Caps</th>
            <td>
                <ul>
                    {% for cap in inventory.caps %}
                        <a href="{{ path('app_cap_show', {'id' : cap.id}) }}">{{ cap.name }}</a>
                    {% else %}
                        <em>Empty inventory</em>
                    {% endfor %}
                </ul>
                      <a href="{{ path('app_cap_newininventory', {'id' : inventory.id}) }}">Add a new cap to {{ inventory }}</a>    
            </td>        
        </tbody>
    </table>

    <a href="{{ path('app_inventory_index') }}">back to list</a>

    <a href="{{ path('app_inventory_edit', {'id': inventory.id}) }}">edit</a>

    {{ include('inventory/_delete_form.html.twig') }}
{% endblock %}
