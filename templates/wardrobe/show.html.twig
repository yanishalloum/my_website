{% extends 'base.html.twig' %}

{% block title %}Wardrobe{% endblock %}

{% block body %}
    <h1>Wardrobe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ wardrobe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ wardrobe.name }}</td>
            </tr>
            <tr>
                <th>IsVisible</th>
                <td>{{ wardrobe.isVisible ? 'Yes' : 'No' }}</td>
            </tr>
            <th>Caps</th>
            <td>
                <ul>
                    {#{% for cap in wardrobe.member.inventory.caps %}#}
                    {% for inventory in wardrobe.member.inventory %}
                            {% for cap in inventory.caps %}
                        <a href="{{ path('app_cap_show', {'id' : cap.id}) }}">{{ cap.name }}</a>
                    {% else %}
                        <em>Empty wardrobe</em>
                    {% endfor %}
                    {% endfor %}
                </ul>
                      
            </td>  
        </tbody>
    </table>

    <a href="{{ path('app_wardrobe_index') }}">back to list</a>

    <a href="{{ path('app_wardrobe_edit', {'id': wardrobe.id}) }}">edit</a>

    {{ include('wardrobe/_delete_form.html.twig') }}
{% endblock %}
