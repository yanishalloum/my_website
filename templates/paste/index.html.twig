{% extends 'base.html.twig' %}

{% block title %}Paste index{% endblock %}

{% block body %}
    <h1>Paste index</h1>

     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                
                
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="{{ path('app_inventory_index') }}">Inventories</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_cap_index') }}">Caps</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_member_index') }}">Members</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_wardrobe_index') }}">Wardrobes</a></li>
                    </ul>
                </div>
            </div>
    </nav>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Created</th>
                <th>Content_type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paste in pastes %}
            <tr>
                <td>{{ paste.id }}</td>
                <td>{{ paste.content }}</td>
                <td>{{ paste.created ? paste.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ paste.contentType }}</td>
                <td>
                    <a href="{{ path('app_paste_show', {'id': paste.id}) }}">show</a>
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_paste_edit', {'id': paste.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_paste_new') }}">Create new</a>
    {% endif %}    
{% endblock %}
